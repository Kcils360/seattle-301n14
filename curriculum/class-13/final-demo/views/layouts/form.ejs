<form action="<%= 'update' === formAction ? `/update/${task.id}` : '/add' %>" method="post">
    <input type="hidden" name="_method" value="<%- 'update' === formAction ? 'put' : 'post' %>">
    <input type="hidden" name="id" value="<%= task.id %>" >
    <fieldset>
        <legend>Details</legend>
        <input type="text" name="title" value="<%= task.title %>" placeholder="Title">
        <textarea name="description" value="<%= task.description %>" placeholder="Describe the task" cols="30" rows="10"><%= task.description %></textarea>
        <input type="text" name="contact" value="<%= task.contact %>" placeholder="Contact">
        <input type="text" name="category" value="<%= task.category %>" placeholder="Category">
    </fieldset>

    <fieldset>
        <legend>Status</legend>
        <!-- <input type="hidden" name="_method" value="put"> -->
        <label>Complete
            <input type="radio" name="status" value="complete" required>
        </label>
        <label>Incomplete
            <input type="radio" name="status" value="incomplete" required>
        </label>
    </fieldset>
    <button type="submit">Update!</button>
</form>